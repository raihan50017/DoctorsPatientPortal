<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserSignInActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="14dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="Sign In"
                android:gravity="center"
                android:padding="30dp"
                android:textSize="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
<!--      EMAIL-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    app:errorEnabled="true"
                    app:startIconDrawable="@drawable/ic_baseline_email_24"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Email">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/emailinput"
                        android:layout_height="wrap_content"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
<!--      PASSWORD-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    app:errorEnabled="true"
                    app:startIconDrawable="@drawable/ic_baseline_lock_24"
                    app:endIconMode="password_toggle"
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Password">

                    <com.google.android.material.textfield.TextInputEditText android:id="@+id/passwordinput" android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
<!--      BUTTON-->
            <Button
                android:id="@+id/signin"
                android:backgroundTint="#81be45"
                android:textSize="20dp"
                android:padding="10dp"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="Sign In"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
<!--      SECTION-->

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/forgetpassword"
                        android:layout_weight=".5" android:layout_width="0dp"
                        android:textColor="#002EA2"
                        android:textSize="18dp"
                        android:text="Forget Password?"                android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/signup"
                        android:layout_weight=".5" android:layout_width="0dp"
                        android:gravity="end" android:layout_height="wrap_content"
                        android:text="Sign Up"
                        android:textColor="#002EA2"
                        android:textSize="18dp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</ScrollView>
</LinearLayout>