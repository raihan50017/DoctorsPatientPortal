<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserSignUpActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:padding="14dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Update Information"
                    android:gravity="center"
                    android:padding="30dp"
                    android:textSize="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!--FULL NAME-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        app:errorEnabled="true"
                        app:startIconDrawable="@drawable/ic_baseline_edit_24"
                        android:id="@+id/fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Full Name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fullnameinput"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!--FULL NAME-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        app:errorEnabled="true"
                        app:startIconDrawable="@drawable/ic_baseline_edit_24"
                        android:id="@+id/degree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Degree">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/degreeinput"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!--Address-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        app:errorEnabled="true"
                        app:startIconDrawable="@drawable/ic_baseline_edit_24"
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/addressinput"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!--FULL NAME-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        app:errorEnabled="true"
                        app:startIconDrawable="@drawable/ic_baseline_edit_24"
                        android:id="@+id/college"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Graduate college">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/collegeinput"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!--Working Place-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        app:errorEnabled="true"
                        app:startIconDrawable="@drawable/ic_baseline_edit_24"
                        android:id="@+id/workingplace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Working place">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/workingplaceinput"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!--MOBILE NUMBER-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        app:errorEnabled="true"
                        app:startIconDrawable="@drawable/ic_baseline_local_phone_24"
                        android:id="@+id/phonenumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile No">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:inputType="numberSigned"
                            android:id="@+id/mobileinput"
                            android:layout_height="wrap_content"
                            />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <!--BIRTH DATE-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/birthdate"
                        android:padding="14dp"
                        android:layout_marginBottom="10dp"
                        android:background="#ddd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_baseline_calendar_today_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></ImageView>
                        <TextView
                            android:id="@+id/dateshow"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:text="Birth Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
                <!--SELECT GENDER-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/menu"
                        app:startIconDrawable="@drawable/ic_baseline_merge_type_24"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Gender">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:id="@+id/genderselect"
                            android:inputType="none"
                            />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <!--SELECT CATEGORY-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/category_select_menu"
                        app:startIconDrawable="@drawable/ic_baseline_person_24"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Category">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cardiologist"
                            android:id="@+id/category_select"
                            android:inputType="none"
                            />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <!-- BUTTON-->
                <Button
                    android:id="@+id/update_profile"
                    android:backgroundTint="#81be45"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:text="Update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <!--SECTION-->

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/signin"
                            android:layout_weight=".5" android:layout_width="0dp"
                            android:gravity="start" android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#002EA2"
                            android:textSize="18dp" />
                        <TextView
                            android:id="@+id/forgetpassword"
                            android:layout_weight=".5" android:layout_width="0dp"
                            android:textColor="#002EA2"
                            android:textSize="18dp"
                            android:text=""
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>