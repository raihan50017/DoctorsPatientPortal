<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardUseCompatPadding="true"
                android:id="@+id/create_post_button"
                android:layout_width="match_parent"
                android:elevation="10dp"
                android:background="@color/white"
                app:cardCornerRadius="30dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/post_button_bg"
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:gravity="start"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:gravity="start"
                                android:layout_gravity="start"
                                android:layout_height="wrap_content">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profile_image"
                                    android:layout_width="50dp"
                                    android:src="@drawable/d1"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>
                        </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="match_parent">
                    <TextView
                        android:padding="5dp"
                        android:background="@drawable/border"
                        android:textStyle="bold"
                        android:text="Post something related to health"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".2"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/ic_baseline_filter_24"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/doctor_category_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="wrap_content">


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:id="@+id/emergency_doctor"
                    android:elevation="10dp"
                    android:clipToPadding="false"

                    android:backgroundTint="@color/white"
                    android:layout_height="130dp">

                    <LinearLayout
                        android:background="@drawable/card_bg"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/emergency"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"/>
                        <TextView
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:text="Emergency Doctor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:id="@+id/online_appointment"
                    android:elevation="10dp"
                    android:clipToPadding="false"
                    android:backgroundTint="@color/white"
                    android:layout_height="130dp">

                    <LinearLayout
                        android:background="@drawable/card_bg"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/onlineappointment"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"/>
                        <TextView
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:text="Online Appointment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:id="@+id/chamber_appointment"
                    android:elevation="10dp"
                    android:clipToPadding="false"
                    android:backgroundTint="@color/white"
                    android:layout_height="130dp">

                    <LinearLayout
                        android:background="@drawable/card_bg"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/chamber"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"/>
                        <TextView
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:text="Chamber Appointment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:id="@+id/others_services"
                    android:elevation="10dp"
                    android:clipToPadding="false"
                    android:backgroundTint="@color/white"
                    android:layout_height="130dp">

                    <LinearLayout
                        android:background="@drawable/card_bg"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/others"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"/>
                        <TextView
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:text="Others Services"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/post_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>