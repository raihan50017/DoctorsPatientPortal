<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DoctorsCategoryListActivity">

<!--CAROUSEL SLIDER-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/banner"
            android:background="@drawable/carousel1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="28dp"
                android:text="Book a doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    app:cardUseCompatPadding="true"
                    android:id="@+id/cardiology_doctor"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="10dp"
                    android:background="@color/white"
                    >
                    <LinearLayout
                        android:gravity="center"
                        android:background="#ddd"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".25"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/d1"
                                app:civ_border_color="#ccc"
                                app:civ_border_width="2dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".75"
                            android:paddingLeft="15dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="20dp"
                                android:text="Cardiology"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="10dp"
                    >
                    <LinearLayout
                        android:gravity="center"
                        android:background="#ddd"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".25"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/d1"
                                app:civ_border_color="#ccc"
                                app:civ_border_width="2dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".75"
                            android:paddingLeft="15dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="20dp"
                                android:text="Critical Medicine CAre"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="10dp"
                    >
                    <LinearLayout
                        android:gravity="center"
                        android:background="#ddd"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".25"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/d1"
                                app:civ_border_color="#ccc"
                                app:civ_border_width="2dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".75"
                            android:paddingLeft="15dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="20dp"
                                android:text="Dentistry"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="10dp"
                    >
                    <LinearLayout
                        android:gravity="center"
                        android:background="#ddd"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".25"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/d1"
                                app:civ_border_color="#ccc"
                                app:civ_border_width="2dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".75"
                            android:paddingLeft="15dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="20dp"
                                android:text="Dermatology"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="10dp"
                    >
                    <LinearLayout
                        android:gravity="center"
                        android:background="#ddd"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".25"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/d1"
                                app:civ_border_color="#ccc"
                                app:civ_border_width="2dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".75"
                            android:paddingLeft="15dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="20dp"
                                android:text="Endrocinology"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="10dp"
                    >
                    <LinearLayout
                        android:gravity="center"
                        android:background="#ddd"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".25"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/d1"
                                app:civ_border_color="#ccc"
                                app:civ_border_width="2dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".75"
                            android:paddingLeft="15dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="20dp"
                                android:text="ENT, Head, Neck"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    </ScrollView>
</LinearLayout>